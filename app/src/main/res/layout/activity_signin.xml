<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signinActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/food" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/artifika"
        android:text="Waves Of Food"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/artifika"
        android:text="Sign Up Here"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/signname"
        android:layout_width="320dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/textbox_bg"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/artifika"
        android:hint="Name"
        android:inputType="text"
        android:paddingStart="20dp"
        android:shadowColor="@color/black"
        android:shadowDx="8"
        android:shadowDy="0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/signemail"
        android:layout_width="320dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textbox_bg"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/artifika"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:shadowColor="@color/black"
        android:shadowDx="8"
        android:shadowDy="0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/signname"
        app:layout_constraintStart_toStartOf="@+id/signname"
        app:layout_constraintTop_toBottomOf="@+id/signname" />

    <EditText
        android:id="@+id/signpass"
        android:layout_width="320dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/textbox_bg"
        android:elevation="10dp"
        android:ems="10"
        android:fontFamily="@font/artifika"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:shadowColor="@color/black"
        android:shadowDx="8"
        android:shadowDy="0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/signemail"
        app:layout_constraintStart_toStartOf="@+id/signemail"
        app:layout_constraintTop_toBottomOf="@+id/signemail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signfac"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/loginbtn_bg"
        android:drawableStart="@drawable/facebook_3"
        android:fontFamily="@font/artifika"
        android:paddingStart="15dp"
        android:text="Facebook"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/signgog"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signgog"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/loginbtn_bg"
        android:drawableStart="@drawable/google"
        android:fontFamily="@font/artifika"
        android:paddingStart="15dp"
        android:text="Google"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/signfac"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/artifika"
        android:text="OR"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/signpass"
        app:layout_constraintStart_toStartOf="@+id/signpass"
        app:layout_constraintTop_toBottomOf="@+id/signpass" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/artifika"
        android:text="Sign Up With"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/haveaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Already Have A Account"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/createac"
        app:layout_constraintStart_toStartOf="@+id/createac" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createac"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/artifika"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/haveaccount"
        app:layout_constraintEnd_toEndOf="@+id/signgog"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="@+id/signfac"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.821" />

</androidx.constraintlayout.widget.ConstraintLayout>